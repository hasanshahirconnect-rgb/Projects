#include <stdio.h>
int main() {
	int t, n;
	scanf("%d", &t);
	for (int i=1; i<=t; i++) {
		int count = 0, minus = 0;
		scanf("%d", &n);
		int nums[n];
		for (int j=0; j<n; j++) {
			scanf("%d", &nums[j]);
			if (nums[j] == 0) {
				nums[j] ++;
				count ++;
			}
			if (nums[j] == -1) {
				minus ++;
			}	
		}
		if (minus%2 == 1) {
			count += 2;
		}
		printf("%d \n", count);
	}
	return 0;
}
